# WhatsApp AI Bot Configuration

# =================================
# AI MODELS CONFIGURATION
# =================================

# Enable streaming responses for real-time interaction
USE_STREAMING=true

# Primary conversational AI model (300MB)
AI_MODEL=microsoft/DialoGPT-small

# Response generation settings
MAX_RESPONSE_LENGTH=500
TEMPERATURE=0.8

# Memory management (set to false for full AI models in Docker)
LOW_MEMORY_MODE=true

# =================================
# WEB SEARCH CONFIGURATION
# =================================

# Enable unlimited web search
SEARCH_ENABLED=true

# Search engine URL (use self-hosted Whoogle for unlimited access)
WHOOGLE_URL=https://search.benbusby.com

# Maximum search results to return
MAX_SEARCH_RESULTS=10

# Automatically search when bot detects questions
AUTO_SEARCH_ON_QUESTIONS=true

# =================================
# TIMEZONE & TRANSLATION
# =================================

# Default timezone
TIMEZONE=Africa/Lagos
LOCALE=en_NG

# Auto-translate non-English messages
AUTO_TRANSLATE=true
TARGET_LANGUAGE=en

# Supported languages for translation
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ja,ko,zh,ar,hi,yo,ig,ha

# =================================
# WHATSAPP CONFIGURATION
# =================================

# Bot identity
BOT_NAME=AI Assistant ðŸ¤–
BOT_PREFIX=!

# Your WhatsApp user ID for style learning (replace with your actual phone number)
YOUR_USER_ID=your_phone_number@c.us

# WhatsApp credentials (JSON format)
WHATSAPP_CREDS={"clientID":"...","serverToken":"...","clientToken":"...","encKey":"...","macKey":"..."}

# =================================
# VOICE & AUDIO FEATURES
# =================================

# Enable voice message processing
VOICE_ENABLED=true
TTS_LANGUAGE=en
VOICE_SPEED=1.0

# =================================
# PERSONALITY & BEHAVIOR
# =================================

# Bot personality mode
PERSONALITY_MODE=humorous
JOKE_FREQUENCY=0.3

# Auto-reply settings
AUTO_REPLY_ENABLED=false
AUTO_REPLY_DELAY_MIN=5
AUTO_REPLY_DELAY_MAX=15

# Proactive messaging
PROACTIVE_MESSAGING=false

# =================================
# FEATURE TOGGLES
# =================================

# Enable creative features
MEME_GENERATION=true
ASCII_ART_ENABLED=true
STORY_GENERATION=true

# GitHub integration for personality learning
GITHUB_PROFILE_SYNC=true
LEARNING_ENABLED=true

# =================================
# EXTERNAL API KEYS (Optional)
# =================================

# OpenAI API for enhanced responses (optional)
OPENAI_API_KEY=

# GitHub token for personality data persistence
GITHUB_TOKEN=

# Weather API key (optional)
WEATHER_API_KEY=

# =================================
# PERFORMANCE SETTINGS
# =================================

# Model caching directory
TRANSFORMERS_CACHE=/app/model_cache
HF_HOME=/app/model_cache

# Threading configuration
TOKENIZERS_PARALLELISM=false
OMP_NUM_THREADS=4
MKL_NUM_THREADS=4

# =================================
# DATABASE CONFIGURATION
# =================================

# PostgreSQL database URL (automatically set in production)
DATABASE_URL=postgresql://user:password@localhost:5432/whatsapp_bot

# =================================
# LOGGING & MONITORING
# =================================

# Logging level
LOG_LEVEL=INFO

# Enable debug mode
DEBUG=false

# Health check port
HEALTH_CHECK_PORT=8080