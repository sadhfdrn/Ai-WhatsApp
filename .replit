modules = ["python-3.11", "nodejs-20", "python3"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["ffmpeg-full", "freetype", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "WhatsApp AI Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "WhatsApp Bridge"

[[workflows.workflow]]
name = "WhatsApp AI Bot"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -u main.py"
waitForPort = 8080

[[workflows.workflow]]
name = "WhatsApp Bridge"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node whatsapp_bridge.js"

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 8080
externalPort = 80
